<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_LogIn_Page">

    <EditText
        android:id="@+id/admin_trip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin LogIn Page"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:textSize="30dp"
        ></EditText>

    <Button
        android:id="@+id/admin_trips_trip1"
        android:layout_marginTop="40dp"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Trip 1"
        android:layout_marginLeft="30dp">
    </Button>

    <Button
        android:id="@+id/admin_trips_trip2"
        android:layout_marginTop="40dp"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Trip 2"
        android:layout_marginLeft="30dp">
    </Button>


    <Button
        android:id="@+id/admin_trips_trip3"
        android:layout_marginTop="40dp"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Trip 3"
        android:layout_marginLeft="30dp">
    </Button>

    <Button
        android:id="@+id/admin_trips_trip4"
        android:layout_marginTop="40dp"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="trip 4"
        android:layout_marginLeft="30dp">
    </Button>

    <Button
        android:id="@+id/admin_trips_trip5"
        android:layout_marginTop="40dp"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="trip 5"
        android:layout_marginLeft="30dp">
    </Button>

    <Button
        android:id="@+id/admin_trips_overall"
        android:layout_marginTop="40dp"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="overall"
        android:layout_marginLeft="30dp">
    </Button>


    <Button
        android:id="@+id/admin_trips_back"
        android:layout_marginTop="40dp"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="back"
        android:layout_marginLeft="30dp">
    </Button>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LogIn Window!"
        android:textColor="#000"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        />

    <EditText
        android:id="@+id/login_logid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Login ID"
        android:inputType="text"
        android:layout_below="@id/logintext"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:inputType="numberPassword"
        android:layout_below="@id/login_logid"
        />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="LogIN"
        android:layout_below="@+id/login_password"
        >
    </Button>

    <Button
        android:id="@+id/loginAdminButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="LogInAsAdmin"
        android:layout_below="@+id/loginButton"
        >
    </Button>

    <Button
        android:id="@+id/createNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Create New User"
        android:layout_below="@+id/loginAdminButton"
        >
    </Button>

    <Button
        android:id="@+id/BtsettingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="BT Setting"
        android:layout_below="@+id/createNewUser"
        >
    </Button>



</RelativeLayout>

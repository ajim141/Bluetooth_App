<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LogIn Window!"
        android:textColor="#000"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        />

    <EditText
        android:id="@+id/login_logid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logintext"
        android:hint="@string/Login_hint"
        android:inputType="text" />
<!--    android:hint="Enter Login ID"-->

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logid"
        android:hint="@string/password_hint"
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password"
        android:text="@string/Login_Button"
        android:textAllCaps="false"
        android:layout_centerInParent="true"
        ></Button>

    <Button
        android:id="@+id/loginAdminButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_centerInParent="true"
        android:text="@string/LoginAsadmin_button"
        android:textAllCaps="false"></Button>

    <Button
        android:id="@+id/createNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/CreateNewUser_button"
        android:layout_below="@+id/loginAdminButton"
        android:layout_centerInParent="true"
        >
    </Button>

    <Button
        android:id="@+id/BtsettingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/BTSetting_button"
        android:layout_below="@+id/createNewUser"
        android:layout_centerInParent="true"
        >
    </Button>
</RelativeLayout>
